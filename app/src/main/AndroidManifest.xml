<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scott.scotchtaster">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DrinkCreateActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TagsActivity"
            android:label="@string/title_activity_tags" />
        <activity
            android:name=".DrinkViewActivity"
            android:label="@string/title_drink_view_activity" />
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page">
        </activity>
        <activity
            android:name=".DescriptionActivity"
            android:label="@string/title_activity_description" />
        <activity
            android:name=".drawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>